<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/group_options_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.6sp"
                android:fontFamily="@font/nelveticaneueltgeow82_65medium"
                android:layout_marginTop="20sp"
                android:textColor="#1b2025"
                android:layout_marginLeft="30dp"
                android:lineSpacingExtra="-0.6sp"
                android:text="ჯგუფის პარამეტრები"
        />

        <View android:layout_width="45dp"
              android:id="@+id/group_options_line"
              app:layout_constraintTop_toBottomOf="@+id/group_options_label"
              android:background="@drawable/yellow_line_bg"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="6dp"
              android:layout_height="2dp"/>


        <ImageView android:layout_width="25dp"
                   android:scaleType="fitXY"
                   android:layout_marginRight="20dp"
                   app:srcCompat="@drawable/ic_option"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toBottomOf="@+id/group_options_label"
                   android:layout_height="6dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View android:layout_width="match_parent"
          android:background="#d8d8d8"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="20.3dp"
          android:layout_height="0.3dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:id="@+id/bottomsheet_permission"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="44dp"
                   android:id="@+id/permission_assign_icon"
                   app:srcCompat="@drawable/ic_permissions"
                   android:layout_height="44dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/permission_assign_text"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="15sp"
                android:fontFamily="@font/nelveticaneueltgeow82_65medium"
                android:layout_gravity="center"
                android:textColor="#1b2025"
                android:lineSpacingExtra="-0.5sp"
                android:text="უფლებების მინიჭება"
        />


    </LinearLayout>

    <View android:layout_width="match_parent"
          android:background="#d8d8d8"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_height="0.3dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="8.3dp"
            android:clickable="true"
            android:id="@+id/bottomsheet_remove_member"
            android:paddingBottom="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="44dp"
                   android:id="@+id/remove_member_icon"
                   app:srcCompat="@drawable/ic_remove_user"
                   android:layout_height="44dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/remove_member_text"
                android:layout_marginLeft="15sp"
                android:fontFamily="@font/nelveticaneueltgeow82_65medium"
                android:layout_gravity="center"
                android:textColor="#1b2025"
                android:lineSpacingExtra="-0.5sp"
                android:text="წევრების წაშლა"
        />


    </LinearLayout>

    <View android:layout_width="match_parent"
          android:background="#d8d8d8"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_height="0.3dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="8.3dp"
            android:id="@+id/bottomsheet_leave_group"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="44dp"
                   android:id="@+id/leave_group_icon"
                   app:srcCompat="@drawable/ic_leave_group"
                   android:layout_height="44dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/leave_group_text"
                android:layout_marginLeft="15sp"
                android:fontFamily="@font/nelveticaneueltgeow82_65medium"
                android:layout_gravity="center"
                android:textColor="#ed2f3f"
                android:lineSpacingExtra="-0.5sp"
                android:text="ჯგუფის დატოვება"
        />


    </LinearLayout>

    <View android:layout_width="match_parent"
          android:background="#d8d8d8"
          android:layout_marginLeft="20dp"
          android:layout_marginBottom="44.5dp"
          android:layout_marginRight="20dp"
          android:layout_height="0.3dp"/>


</LinearLayout>